<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="CommentDao">
  
  <resultMap type="comment" id="CommentMap">
    <id column="cno"           property="commentNo"/>
    <result column="uno"    property="userNo"/>
    <result column="rno"    property="recipeNo"/>
    <result column="content"    property="content"/>
    <result column="cdt"    property="createdDate"/>
    <result column="mdt"    property="modifiedDate"/>
   
   <association property="user" javaType="user">
    <id column="user_no"        property="userNo"/>
   </association>
    <!-- 
    <association property="writer" javaType="member">
      <id column="writer_no"    property="no"/>
      <result column="name"     property="name"/>
    </association> -->
  </resultMap>

  <select id="findAll" resultMap="CommentMap" parameterType="string">
    select 
      cno,
      uno,
      rno,
      content,
      cdt,
      mdt
      from oi_comment
  </select>
  
  <select id="findByLogno" resultMap="CommentMap" parameterType="user">
	select
	  content,
	  cdt
	from
 	  oi_comment
   	where
   	  uno = #{user.userNo}
  </select>


  <insert id="insert" parameterType="comment">
    insert into oi_comment(uno,rno,content) 
    values(#{userNo}, #{recipeNo}, #{content})
  </insert>
  
   <delete id="deleteByRecipeNo" parameterType="int">
    delete from oi_comment
    where rno=#{recipeNo}
  </delete>
  
  
</mapper>






