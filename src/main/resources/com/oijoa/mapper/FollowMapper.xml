<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="FollowDao">
  
  <resultMap type="follow" id="FollowMap">
    <result column="follower"           property="follower"/>
    <result column="following"    property="following"/>
    <result column="loginNo" property="loginUserNo"/>
    
    <association property="follower" javaType="user">
      <id column="follower_no"        property="userNo"/>
      <id column="follower_name"        property="name"/>
      <result column="follower_nick"  property="nick"/>
    </association>
    
    <!-- 
    <association property="writer" javaType="member">
      <id column="writer_no"    property="no"/>
      <result column="name"     property="name"/>
    </association> -->
  </resultMap>

  <select id="findAll" resultMap="FollowMap" parameterType="string">
    select 
      follower,
      following
      from oi_follow
  </select>
  
  <select id="findByFollowerUserNo" resultMap="FollowMap"
    parameterType="int">
    select
      u.uno follower_no,
      u.name follower_name,
      u.nick follower_nick
    from
      oi_follow f
      inner join oi_user u
      on f.follower = u.uno
    where
      f.following = #{loginNo}
  </select>
</mapper>






