<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.oijoa.dao.UserDao">
  <resultMap type="user" id="UserMap">
    <id column="uno"           property="userNo"/>
    <result column="utype"  property="userTypeNo"/>
    <result column="point"  property="point"/>
    <result column="name"  property="name"/>
    <result column="nick"  property="nick"/>
    <result column="email"  property="email"/>
    <result column="password"  property="password"/>
    <result column="postno"  property="postNo"/>
    <result column="addr"  property="address"/>
    <result column="det_addr"  property="detailAddress"/>
    <result column="photo"  property="photo"/>
     
  </resultMap>

  <select id="findAll" resultMap="UserMap" parameterType="string">
    select 
      uno,
      utype, 
      point, 
      name,
      nick, 
      email,
      password,
      postno,
      addr,
      det_addr,
      photo
    from 
      oi_user
    <if test="keyword != null">
    <bind name="pattern" value="'%' + _parameter + '%'" />
    where 
      name like #{pattern}
      or nick like #{pattern}
    </if>
    order by
      uno desc
  </select>

  
  <select id = "findByNo" resultMap ="UserMap" parameterType="int">
    select
      uno,
      utype, 
      point, 
      name,
      nick, 
      email,
      password,
      postno,
      addr,
      det_addr,
      photo
    from
      oi_user
    where
      uno = #{no}
  </select>
  
  <update id="update" parameterType="user">
    update oi_user 
    <set>
      <if test="nick != null">nick = #{nick},</if>
      <if test="email != null">email = #{email},</if>
      <if test="userTypeNo != null">utype = #{userTypeNo},</if>
      <if test="password != null">password = password(#{password}),</if>
      <if test="postNo != null">postno = #{postNo},</if>
      <if test="address != null">addr = #{address},</if>
      <if test="detailAddress != null">det_addr = #{detailAddress},</if>
      <if test="photo != null">photo = #{photo}</if>
    </set>
    where
    uno = #{userNo}
  </update>
  
  <delete id="delete" parameterType="int">
    delete from oi_user
    where no = #{no}
  </delete>
  
  <select id="findByEmailPassword" parameterType="map" resultMap="UserMap">
    select
      uno,
      name,
      nick,
      email,
      point,
      postno,
      addr,
      det_addr,
      photo,
      utype
    from
      oi_user
    where
      email = #{email}
      and password = password(#{password})
  </select>

  <insert id="insert" parameterType="user">
    insert into oi_user(name,email,password,photo,nick,point,utype) 
    values(#{name},#{email},password(#{password}),#{photo},#{nick},0,0)
  </insert>
  
</mapper>






